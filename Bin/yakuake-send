function print_help() {
    echo ""
    echo "yakuake-send [commands]"
    echo ""
    echo "    yakuake-send sends a command to all splits in the active session"
    echo ""
    echo "    eg:"
    echo "        yakuake-send cd ~"
    echo ""
    echo "    Help:"
    echo "        If the first argument is '-h', '--help', or 'help', this"
    echo "        help message is printed."
    echo ""
    exit 0
}

if [[ -z "$*" || "${1}" == "-h" || "${1}" == "--help" || "${1}" == "help" ]]; then
    print_help
fi

ACTIVE_SESSION=$(qdbus org.kde.yakuake /yakuake/sessions org.kde.yakuake.activeSessionId)

IFS=','
read -ra TERMINAL_IDS <<< "$(qdbus org.kde.yakuake /yakuake/sessions org.kde.yakuake.terminalIdsForSessionId "${ACTIVE_SESSION}")"
unset IFS

for TERMINAL in "${TERMINAL_IDS[@]}"; do
    qdbus org.kde.yakuake /yakuake/sessions runCommandInTerminal "${TERMINAL}" "$*"
done

